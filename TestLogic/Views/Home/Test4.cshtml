@using TestLogic.Models
@model TwoStrings
@{
	ViewData["Title"] = "Test4";
}

<h1>Test4</h1>

<div class="row">
	<div class="col-sm-12 col-md-6">
		Write a function that, given two strings, test whether one is an anagram of the other.
	</div>
	<div class="clearfix"></div>
	<div class="col-md-12">
		<form  method="post">
			<div class="form-group">
				<label asp-for="String1" class="control-label"></label>
				<input asp-for="String1" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="String2" class="control-label"></label>
				<input asp-for="String2" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Test anagram" class="btn btn-default" />
			</div>
		</form>
	</div>
	<div class="clearfix"></div>
	<div class="col-md-12 offset-md-4">
		<div class="form-group">
			<label class="control-label">@ViewData["Result"]</label>
		</div>
	</div>

	<div>
		<a href="/home">Go back</a>
	</div>
</div>